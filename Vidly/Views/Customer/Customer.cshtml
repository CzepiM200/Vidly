@model Vidly.Models.Customer
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td><b>Id</b></td>
            <td><b>Name</b></td>
            <td><b>Type od subscroiption</b></td>
            @if (Model.Birthdate != null)
            {
                <td><b>Birthday</b></td>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.MembershipType.Name</td>
            @if (Model.Birthdate != null)
            {
                <td><b>@Model.Birthdate.Value.ToShortDateString()</b></td>
            }
        </tr>
    </tbody>
</table>

